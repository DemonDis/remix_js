{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "concurrently \"npm run dev:sass\" \"remix dev\"",
    "dev": "concurrently \"npm run tailwind\" \"npm run dev:postcss\" \"npm run dev:sass\" \"remix dev\"",
    "build:css": "sass ./styles -o ./app/styles --output-style compressed",
    "dev:sass": "sass styles/:app/styles/ --watch ",
    "tailwind": "npx tailwindcss -i ./styles/tailwind.scss -o ./app/tailwind.css",
    "dev:postcss": "postcss styles --base styles --dir app/styles -w",
    "build:postcss": "postcss styles --base styles --dir app/styles --env production"

  },
  "dependencies": {
    "@remix-run/node": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "@remix-run/serve": "^1.10.1",
    "bootstrap": "^5.2.3",
    "isbot": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.10.1",
    "@remix-run/eslint-config": "^1.10.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=14"
  }
}
